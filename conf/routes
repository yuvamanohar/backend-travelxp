# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# User controller actions
POST    /v1/bootstrap                                          controllers.UserController.bootstrap()
POST    /v1/deleteUser/:userId                                 controllers.UserController.deleteUser(userId: Long)
GET     /v1/getUser/:userId                                    controllers.UserController.getUser(userId: Long)

#PostController
PUT    /v1/user/:userId/postContent                            controllers.PostController.postContent(userId: Long)

#FeedController
GET    /v1/user/:userId/getOlderFeed                           controllers.FeedController.getOlderFeed(userId: Long)
GET    /v1/user/:userId/getUpdatedFeed                         controllers.FeedController.getUpdatedFeed(userId: Long)

#ProfileController
GET    /v1/user/:userId/getProfileInfo                          controllers.ProfileController.getProfileInfo(userId: Long)
GET    /v1/searchUsers/:name                                    controllers.ProfileController.searchUsers(name: String)

#FanRelationController
POST    /v1/addFanRelation                                      controllers.FanRelationController.addFanRelation()
